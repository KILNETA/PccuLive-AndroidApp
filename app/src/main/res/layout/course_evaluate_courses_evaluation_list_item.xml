<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/course_evaluate_courses_evaluation_list_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="填寫時間："
            android:textColor="#B0000000"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/timestampText"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2019-05-31 11:25:41"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="推薦程度："
            android:textColor="#B0000000"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/ratingText"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="推爆 / 👍👍👍"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修課學期："
            android:textColor="#B0000000"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/semesterText"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="107下"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上課內容 / 方式 / 規定 / 點名："
            android:textColor="#B0000000"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/teachingText"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="會簽到，上上課講義（pdf）\n可以玩手機👍🏻"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="評分 / 考試方式："
            android:textColor="#B0000000"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/gradingText"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="有作業、期中考、期末成品"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="報告 / 作業："
            android:textColor="#B0000000"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/assigmentText"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="每次上課都有作業\n沒有報告"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="其他補充："
            android:textColor="#B0000000"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/commentText"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用心體會"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>