<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bus_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="130px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/PCCU_yellow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/PCCU_yellow">

            <com.google.android.material.button.MaterialButton
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginLeft="10px"
                android:background="@drawable/button_effect"
                android:insetTop="0px"
                android:insetBottom="0px"
                app:backgroundTint="@null"
                app:cornerRadius="50px"
                app:icon="@drawable/back"
                app:iconGravity="textTop"
                app:iconPadding="0px"
                app:iconSize="80px"
                app:iconTintMode="multiply" />
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/bus_tabs"
            android:layout_marginRight="80px"
            android:layout_marginLeft="80px"
            android:layout_width="match_parent"
            android:layout_height="100px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabTextAppearance="@style/bottom_tab_title_inactive"
            app:tabSelectedTextColor="#FFFFFF"
            app:tabTextColor="#99FFFFFF"
            app:tabIndicatorColor="#FF0083"
            android:background="@color/PCCU_yellow">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabA"
                android:text="往陽明山"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabB"
                android:text="往捷運劍潭站"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bus_fragment"/>

</LinearLayout>