<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:clipChildren="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160px"
    android:id="@+id/bus_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px">

                <LinearLayout
                    android:layout_width="210px"
                    android:layout_height="110px"
                    android:background="@drawable/bus_estimate_time"
                    app:strokeColor="#E6EC51"
                    app:strokeWidth="20px"
                    android:text="10"
                    app:cornerRadius="85px"
                    android:gravity="center"
                    style="bus">
                    <TextView
                        android:id="@+id/TimeState"
                        android:layout_marginLeft="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text=""/>
                    <TextView
                        android:id="@+id/EstimateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="27sp"
                        android:text="－"/>
                    <TextView
                        android:id="@+id/TimeMin"
                        android:layout_marginRight="10px"
                        android:paddingBottom="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="bottom"
                        android:textSize="14sp"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="40px"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/BusName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="bottom"
                            android:singleLine="true"
                            android:textSize="16sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/DestinationStopName"
                            android:layout_marginLeft="20px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#80FFFFFF"
                            android:gravity="bottom"
                            android:singleLine="true"
                            android:textSize="16sp"
                            android:text=""
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/StationName"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="top"
                        android:singleLine="true"
                        android:textSize="22sp"
                        android:text=""
                        />
                </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="#A3A3A3"
                android:layout_height="2px"
                android:layout_width="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>